<div class="icon">
    <% if (isDay) { %>
        <% if (image == 'chanceflurries') { %>
            <i class="wi-day-snow"></i>
        <% } else if (image == 'chancerain') { %>
            <i class="wi-day-showers"></i>
        <% } else if (image == 'chancesleet') { %>
            <i class="wi-day-rain-mix"></i>
        <% } else if (image == 'chancesnow') { %>
            <i class="wi-day-snow"></i>
        <% } else if (image == 'chancetstorms') { %>
            <i class="wi-day-thunderstorm"></i>
        <% } else if ((image == 'clear') || (image == 'sunny')) { %>
            <i class="wi-day-sunny"></i>
        <% } else if (image == 'cloudy') { %>
            <i class="wi-cloudy"></i>
        <% } else if (image == 'flurries') { %>
            <i class="wi-snow"></i>
        <% } else if (image == 'fog') { %>
            <i class="wi-fog"></i>
        <% } else if (image == 'haze') { %>
            <i class="wi-day-sunny-overcast"></i>
        <% } else if ((image == 'mostlycloudy') || (image == 'mostlysunny') || (image == 'partlycloudy') || (image == 'partlysunny')) { %>
            <i class="wi-day-cloudy"></i>
        <% } else if (image == 'sleet') { %>
            <i class="wi-rain-mix"></i>
        <% } else if (image == 'rain') { %>
            <i class="wi-showers"></i>
        <% } else if (image == 'snow') { %>
            <i class="wi-snow"></i>
        <% } else if (image == 'thunder') { %>
            <i class="wi-lightning"></i>
        <% } else if (image == 'tstorms') { %>
            <i class="wi-thunderstorm"></i>
        <% } %>
    <% } else { %>
        <% if (image == 'chanceflurries') { %>
            <i class="wi-night-alt-snow"></i>
        <% } else if (image == 'chancerain') { %>
            <i class="wi-night-alt-showers"></i>
        <% } else if (image == 'chancesleet') { %>
            <i class="wi-night-alt-rain-mix"></i>
        <% } else if (image == 'chancesnow') { %>
            <i class="wi-night-alt-snow"></i>
        <% } else if (image == 'chancetstorms') { %>
            <i class="wi-night-alt-thunderstorm"></i>
        <% } else if ((image == 'clear') || (image == 'sunny')) { %>
            <i class="wi-night-clear"></i>
        <% } else if (image == 'cloudy') { %>
            <i class="wi-cloudy"></i>
        <% } else if (image == 'flurries') { %>
            <i class="wi-snow"></i>
        <% } else if (image == 'fog') { %>
            <i class="wi-fog"></i>
        <% } else if (image == 'haze') { %>
            <i class="wi-fog"></i>
        <% } else if ((image == 'mostlycloudy') || (image == 'mostlysunny') || (image == 'partlycloudy') || (image == 'partlysunny')) { %>
            <i class="wi-night-cloudy"></i>
        <% } else if (image == 'sleet') { %>
            <i class="wi-rain-mix"></i>
        <% } else if (image == 'rain') { %>
            <i class="wi-showers"></i>
        <% } else if (image == 'snow') { %>
            <i class="wi-snow"></i>
        <% } else if (image == 'thunder') { %>
            <i class="wi-lightning"></i>
        <% } else if (image == 'tstorms') { %>
            <i class="wi-thunderstorm"></i>
        <% } %>
    <% } %>
</div>