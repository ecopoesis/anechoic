<h3><%=data.location%></h3>
<div class="card">
    <div class="current">
        <%= icon({image: data.image, isDay: data.isDay}) %>
        <div class="temp">
            <%=data.temp_f%>&deg;F
        </div>
    </div>
    <div class="detail">
        <%=data.humidity%> RH | <%=utils.round_2(data.wind_mph)%> mph <%=data.wind_direction%> | <%=utils.round_2(data.pressure_in)%> inHg <%=data.pressure_trend%>
    </div>
    <table class="forecast">
        <tr>
            <% for(var i=0; i < data.forecast.length; i++) { %>
            <td colspan="2" class="weather-icon">
                <%= icon({image: data.forecast[i].image, isDay: true}) %>
            </td>
            <% } %>
        </tr>
        <tr>
            <% for(var i=0; i < data.forecast.length; i++) { %>
                <td class="low">
                    <%=data.forecast[i].low_f%>&deg;
                </td>
                <td class="high">
                    <%=data.forecast[i].high_f%>&deg;
                </td>
            <% } %>
        </tr>
        <tr>
            <% for(var i=0; i < data.forecast.length; i++) { %>
            <td colspan="2" class="date">
                <%=data.forecast[i].day%>
            </td>
            <% } %>
        </tr>
    </table>
</div>